@model IEnumerable<job_offers.Models.JobsCategory>
@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron alert alert-info" >
    <h1>Welcome my dear visitor</h1>
    <p class="lead">Discover the latest jobs directly from companies on our opportunities, register now for free. Job opportunities, whatever your skills. Free corporate packages. Jobs in all governorates of Egypt .............</p>
    <p><a href="~/home/about" class="btn btn-primary btn-lg">Learn more &raquo;</a></p>
</div>


@foreach (var item in Model)
{
    <div class="panel panel-info ">
        <div class="panel-heading"><h1> @Html.DisplayFor(modelItem => item.CategoryName)</h1></div>       
        <div class="row panel-body ">
            <h3 class="text-primary  padding-all-10"> @Html.DisplayFor(modelItem => item.CategoryDescription)</h3>

            @foreach (var subitem in item.jobs)
            {
                <div class="col-md-4 padding-bottom-10 margin-all-5 thumbnail hight">
                    <img src="~/uploads/@subitem.JobImage" alt="Alternate Text" style="width:120px ;" />
                    <h3>@Html.DisplayFor(modelitem => subitem.Title)</h3>

                    <h5>@Html.Raw(HttpUtility.HtmlDecode(Html.DisplayFor(modelitem => subitem.JobContent).ToString()))</h5>


                    @Html.ActionLink("Details", "Details", new { jobid = subitem.ID }, new { @class = "btn btn-info" })
                    <br />
                </div>
            }
        </div>
    </div>
}



       
