@model IEnumerable<Microsoft.AspNet.Identity.EntityFramework.IdentityRole>

    <p>
        @Html.ActionLink("Create New Role", "Create", null, new { @class = "btn btn-success mybtn" })
    </p>
<table class="table table-striped table-bordered table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-success mybtn" }) |
            @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-info mybtn" }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger mybtn" })
</tr>
}

</table>
